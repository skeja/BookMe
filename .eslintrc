{
  "root": true,
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "arrow-parens": "off",
    "comma-dangle": [
      "warn",
      "never"
    ],
    "generator-star-spacing": "off",
    "semi": [
      "warn",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "object-curly-spacing": ["error", "always"]
  }
}
